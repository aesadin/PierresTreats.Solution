@{
  Layout = "_Layout";
}

@model TheTreats.Models.Flavor

<h1>Tag Details</h1>
<hr/>
<h3>@Html.DisplayNameFor(model => model.FlavorName): @Html.DisplayFor(model => model.FlavorName)</h3>
<br>
@if(@Model.Treats.Count == 0)
{
  <p>This flavor has not yet been assigned to a treat</p>
}
else
{
  <h4>This flavors associated treat:</h4>
  <ul>
  @foreach(var join in Model.Treats)
  {
    <li><p>@join.Treat.Name</p></li>
    @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}
<br>
<p>@Html.ActionLink("Edit flavor", "Edit", new { id = Model.FlavorId})</p>
<p>@Html.ActionLink("Delete flavor", "Delete", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Add flavor", "AddFlavor", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Back to flavors", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>