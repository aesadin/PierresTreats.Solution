@{
  Layout = "_Layout";
}

@model TheTreats.Models.Flavor

<h1>Add a new flavor</h1>
<hr/>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.FlavorName)
  @Html.TextBoxFor(model => model.FlavorName)
  <br>
  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId")
  <br>
  <input type="submit" value="Add new flavor" class="btn btn=default" />
}
<br>
<p>@Html.ActionLink("Back to flavor", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>